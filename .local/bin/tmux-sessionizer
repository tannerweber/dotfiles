#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
	directory=$1
else
	directory=$(find ~/ ~/.dotfiles ~/Personal_Projects ~/CS350_Programs -mindepth 1 -maxdepth 1 -type d | fzf --style full --reverse)
fi

if [[ -z $directory ]]; then
	echo "The name given is an empty string."
	exit 1
fi

this_user=$(whoami)
selected_name=$(basename "$directory" | tr . _)
tmux_running=$(pgrep -u $this_user "tmux")

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
	echo "tmux not running, creating a new session"
	sleep 1
	exec tmux new-session -s $selected_name -c $directory
	exit 0
fi

if ! tmux has-session -t=$selected_name 2> /dev/null; then
	echo "creating inside session"
	sleep 1
	tmux new-session -ds $selected_name -c $directory
fi

tmux switch-client -t $selected_name
